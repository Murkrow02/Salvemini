<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SalveminiApp.AreaVip.CreaSondaggio">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Crea" Clicked="Crea_Clicked" x:Name="createBtn" />
    </ContentPage.ToolbarItems>

    <StackLayout Padding="25,20,25,0" Spacing="40">

        <Entry Placeholder="Domanda del sondaggio" MaxLength="149" x:Name="pollTitle"/>

        <StackLayout>
            <Label Text="Opzioni" FontSize="Title" FontAttributes="Bold" />
            <Entry MaxLength="29" x:Name="opzioneEntry" Placeholder="Nome" HorizontalOptions="FillAndExpand" />
            <Button  Text="Allega immagine (Opzionale)" BackgroundColor="Transparent" />
            <Button Text="Aggiungi opzione" Clicked="addOption" />
        </StackLayout>


    </StackLayout>
</ContentPage>
