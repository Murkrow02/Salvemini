                    <Frame BackgroundColor="#007aff" HasShadow="False" WidthRequest="60" HeightRequest="60" Padding="0" CornerRadius="30" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds=".5, .5"/>
                    <!--<Frame BackgroundColor="#f07aff" HasShadow="False" WidthRequest="24" HeightRequest="24" Padding="0" CornerRadius="12" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds=".5, .5"/>-->
                </AbsoluteLayout>
            </Frame>
    </ContentView.Content>
</ContentView>
