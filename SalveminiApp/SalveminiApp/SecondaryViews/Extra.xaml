<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:iconize="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize" xmlns:countdown="clr-namespace:SalveminiApp.Helpers" xmlns:local="clr-namespace:SalveminiApp" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SalveminiApp.SecondaryViews.Extra">
    <ContentPage.Content>
        <StackLayout x:Name="mainLayout" Spacing="8">
            <!--Close X button-->
            <iconize:IconButton Text="fal-times" BackgroundColor="Transparent" FontSize="30" TextColor="{x:Static local:Styles.TextGray}" HorizontalOptions="EndAndExpand" Clicked="closePage" VerticalOptions="Start" />
            <!--CountDown-->
            <StackLayout x:Name="secondLayout" Spacing="25">
                <Label Margin="0,20,0,0" Text="Mancano" TextColor="{x:Static local:Styles.TextGray}" FontAttributes="Bold" FontSize="35" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
                <Label Text="Alla fine della scuola" TextColor="{x:Static local:Styles.TextGray}" FontAttributes="Bold" FontSize="20" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
            </StackLayout>
            <Button x:Name="lbl" Text="Pedo" Clicked="Signal"/>
            <Slider x:Name="S1" Value="0.5" ValueChanged="SendValue"/>
            <Slider x:Name="S2" Value="0.5"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
